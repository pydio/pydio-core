      "parameters" : {
        "path" : {
          "required" : true,
          "type" : "string",
          "location" : "header",
          "sentAs": "Dropbox-API-Arg",
          "filters": [{
            "method": "\\Pydio\\Access\\DropBox\\Driver::convertToJSON",
            "args": [ "@api", "@value" ]
          }]
        }
      }
    },
    "Stat" : {
