          "required" : true,
          "type" : "string",
          "location" : "json",
          "sentAs": "from_path"
        },
        "topath/fullpath" : {
          "required" : true,
          "type" : "string",
          "location" : "json",
          "sentAs": "to_path"
        }
      }
    },
    "Put" : {
      "httpMethod" : "POST",
      "uri": "files/upload",
      "parameters" : {
        "path/fullpath": {
          "required": true,
          "type": "string",
          "location": "query",
          "sentAs": "path"
        },
        "body" : {
          "location" : "body"
        }
      }
    },
    "Delete" : {
      "httpMethod" : "POST",
      "uri" : "files/delete",
